generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model Data {
  id               Int      @id @default(autoincrement())
  date             DateTime @default(now()) @db.Date()
  lot              String?
  pp               Int?
  managerId        Int?
  manager          String?
  operation        String
  state            String?
  workpieceType    String
  model            String?
  sizeRange        String?
  length           String?
  channel          Float?
  grade            String?
  colorType        String?
  widthIn          Float?
  widthOut         Float?
  tareWidth        Float?
  provider         String?
  recipient        String?
  countItemsIn     Int?
  countItemsOut    Int?
  numProduction    String?
  workingHours     Int?
  exercise         String?
  numProducts      Int?
  numMoving        Int?
  moneyIn          Decimal?
  moneyOut         Decimal?
  moneyDefect      Decimal?
  typeOfProcessing String?
  fraction         String?
  materialGroup    String?
  stock            String?
  numShipment      Int?
  shade            String?
}

model Users {
  id       Int     @id @default(autoincrement())
  login    String  @unique
  password String
  key      String?
  status   String?
  store    Stores? @relation(fields: [storesId], references: [id])
  activ    Boolean @default(true)
  storesId Int?
}

model Stores {
  id             Int               @id @default(autoincrement())
  name           String
  Users          Users[]
  StoreOperation StoreOperations[]
}

model Opereytion {
  id                Int              @id @default(autoincrement())
  opereytion        String           @unique
  result            String?
  sborka            Int?
  activ             Boolean          @default(true)
  StoreOperations   StoreOperations? @relation(fields: [storeOperationsId], references: [id])
  storeOperationsId Int?
}

model StoreOperations {
  id         Int          @id @default(autoincrement())
  store      Stores?      @relation(fields: [storesId], references: [id])
  storesId   Int?
  Opereytion Opereytion[]
}

model Grade {
  id      Int     @id @default(autoincrement())
  grade   String  @unique
  for     String?
  variant Int
  activ   Boolean @default(true)
}

model Collor {
  id      Int     @id @default(autoincrement())
  collor  String  @unique
  for     String?
  variant Int
  activ   Boolean @default(true)
}
